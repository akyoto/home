// Place your settings in this file to overwrite the default settings
{
	"editor.fontFamily": "'Ubuntu Mono'",
	"editor.fontSize": 16,
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"editor.scrollBeyondLastLine": false,
	"editor.wordWrap": "off",
	"go.alternateTools": {
		"go-langserver": "gopls",
	},
	"go.languageServerExperimentalFeatures": {
		"format": true,
		"autoComplete": true
	},
	"go.useLanguageServer": true,
	"go.formatTool": "goimports",
	"terminal.integrated.shellArgs.linux": ["-l"],
	"gitProjectManager.maxDepthRecursion": 0,
	"gitProjectManager.checkRemoteOrigin": false,
	"gitProjectManager.openInNewWindow": false,
	"gitProjectManager.baseProjectsFolders": [
		"/home/eduard/projects"
	],
	"gitProjectManager.ignoredFolders": [
		"node_modules",
		"vendor"
	],
	"files.exclude": {
		"node_modules": true,
		"vendor": true,
		".editorconfig": true,
		".gitignore": true,
		"**/*.js": {
			"when": "$(basename).ts"
		}
	},
	"files.associations": {
		"*.pixy": "jade",
		"*.scarlet": "stylus"
	},
	"extensions.autoUpdate": true,
	"languageStylus.useSeparator": false,
	"git.confirmSync": false,
	"git.enableSmartCommit": true,
	"window.zoomLevel": 1,
	"workbench.iconTheme": "material-icon-theme",
	"files.autoSave": "off",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"markdownlint.config": {
		"MD010": false
	},
	"[jade]": {
		"files.trimTrailingWhitespace": false
	}
}