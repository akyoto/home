// Place your settings in this file to overwrite the default settings
{
	"editor.fontFamily": "'Ubuntu Mono'",
	"editor.fontSize": 14,
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"editor.scrollBeyondLastLine": false,
	"editor.wordWrap": "off",
	"extensions.autoUpdate": true,
	"breadcrumbs.enabled": true,
	"window.titleBarStyle": "custom",
	"window.zoomLevel": 1,
	"workbench.iconTheme": "material-icon-theme",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"files.autoSave": "off",
	"languageStylus.useSeparator": false,
	"go.lintTool":"golangci-lint",
	"go.lintFlags": [
		"--fast"
	],
	"go.formatTool": "goimports",
	"git.confirmSync": false,
	"git.enableSmartCommit": true,
	"gitProjectManager.maxDepthRecursion": 0,
	"gitProjectManager.checkRemoteOrigin": false,
	"gitProjectManager.openInNewWindow": false,
	"gitProjectManager.baseProjectsFolders": [
		"/home/eduard/projects"
	],
	"gitProjectManager.ignoredFolders": [
		"node_modules",
		"vendor"
	],
	"files.exclude": {
		"node_modules": true,
		"vendor": true,
		".editorconfig": true,
		".gitignore": true,
		"**/*.js": {
			"when": "$(basename).ts"
		}
	},
	"files.associations": {
		"*.pixy": "jade",
		"*.scarlet": "stylus"
	},
	"markdownlint.config": {
		"MD010": false
	},
	"[jade]": {
		"files.trimTrailingWhitespace": false
	},
	"cSpell.userWords": [
		"Akyoto",
		"aero",
		"aerogo",
		"anilist",
		"animenotifier",
		"autoimport",
		"codecov",
